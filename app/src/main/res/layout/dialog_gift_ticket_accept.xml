    <RelativeLayout
        android:id="@+id/top_hongbao"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_vucher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="恭喜获得礼物"
            android:textColor="#ff333333"
            android:textSize="30.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:background="#FFFFCC"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/top_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/accepted_gift_pic"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/loading_pic"
                    fresco:placeholderImage="@drawable/loading_pic" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="10dp"
                android:paddingRight="22.0dip">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:paddingTop="10.0dip">

                    <TextView
                        android:id="@+id/accepted_gift_name_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="代金券名字的名字的命根子的名字"
                        android:textColor="#ff333333"
                        android:textSize="18.0sp" />

                    <TextView
                        android:id="@+id/accepted_gift_description_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lineSpacingExtra="2.0dip"
                        android:maxLines="2"
                        android:paddingTop="10dip"
                        android:text="代金券的内容也是很多的内容"
                        android:textColor="#ff898989"
                        android:textSize="13.0sp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_main"
            android:layout_centerHorizontal="true"
            android:gravity="left"
            android:text="已放入账户中，请在「礼物」页查看"
            android:textSize="10.0sp"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp">

        <TextView
            android:id="@+id/accept_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="#CCFFCC"
            android:textSize="23.0sp" />
    </RelativeLayout>
</RelativeLayout>